{
  "name": "adp-coding-challenge",
  "version": "1.0.0",
  "description": "Express server with API for UI",
  "main": "main.ts",
  "author": {
    "name": "Sam Freeman",
    "email": "sam.freeman.55@gmail.com"
  },
  "license": "UNLICENSED",
  "scripts": {
    "client-build": "cd client && yarn build",
    "client-install": "cd client && yarn install",
    "client-start": "cd client && yarn start",
    "server-start": "ts-node src/main.ts",
    "prebuild": "yarn client-build",
    "build": "tsc",
    "prestart": "yarn build",
    "start": "concurrently --kill-others-on-fail \"yarn server-start\" \"yarn client-start\"",
    "start-dev": "nodemon --config nodemon.json"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsdom": "^15.2.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^24.9.1",
    "@types/jsdom": "^12.2.4",
    "@types/node": "^11.15.12",
    "@types/readline-sync": "^1.4.3",
    "@types/xml2js": "^0.4.5",
    "babel-jest": "^24.9.0",
    "concurrently": "^5.2.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.3",
    "ts-jest": "^24.3.0"
  }
}
